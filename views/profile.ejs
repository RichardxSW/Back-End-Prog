<div class="wrapper">
    <h1>Welcome, <%= name%></h1>

    <img src="<%= pic%>" alt="">
        <table>
            <tr>
                <td>Username</td>
                <td><%= name%></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><%= email%></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><%= password%></td>
            </tr>
        </table>
    <div class="button-container">
        <form id="editForm">
            <a href="/edit?id" onclick="edit()">Edit</a>
        </form>
    
        <form id="logoutForm">
            <a href="/" onclick="logout()">Logout</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="css/profile.css">
<script>
    async function logout() {
    
    try {
        const response = await fetch(`/`, {
            method: 'DELETE',
        });

        if (!response.ok) {
            throw new Error('Failed to LOGOUT');
        } else {
            console.log('Logout succes')
        }

        // Refresh halaman untuk memperbarui daftar review
    } catch (error) {
        console.error(error);
        alert('Failed to logout');
    }
    }
</script>